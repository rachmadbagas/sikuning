<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/gradient_atas"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="5dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/panelatas"
            android:padding="5dp">

            <ImageView android:src="@drawable/ic_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/usernameTV"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="USERNAME"
                android:layout_gravity="fill_horizontal|center_vertical"/>

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <GridLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/panelatas"
                android:layout_marginRight="7.5dp"
                android:columnCount="1"
                android:rowCount="1"
                android:padding="5dp">

                <ImageView android:src="@drawable/ic_notif"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

            </GridLayout>

            <GridLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/panelatas"
                android:columnCount="1"
                android:rowCount="1"
                android:padding="5dp">

                <ImageView android:src="@drawable/ic_setting"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

            </GridLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/main_menu_panel"
        app:cardElevation="16dp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:rowCount="1">


            <GridLayout
                android:layout_width="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_naik" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="NAIK ANGKOT" />

            </GridLayout>

            <View
                android:paddingVertical="10dp"
                android:id="@+id/divider1"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <GridLayout
                android:layout_width="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_information" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="INFO ANGKOT" />

            </GridLayout>

            <View
                android:paddingVertical="10dp"
                android:id="@+id/divider2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <GridLayout
                android:layout_width="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:padding="10dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alert" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="BANTUAN" />

            </GridLayout>


        </GridLayout>

    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_gravity="center"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:columnCount="1"
                android:padding="5dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_sewa" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="SEWA ANGKOT" />

            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_gravity="center"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:columnCount="1"
                android:padding="5dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pro" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="KRITIK SARAN" />

            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_gravity="center"
            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:columnCount="1"
                android:padding="5dp"
                android:rowCount="2">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pentung" />

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:text="KELUHAN" />

            </GridLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>
