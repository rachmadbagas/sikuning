<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.info_angkot"
    android:id="@+id/infoangkotContainer">


    <TextView
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/cardview_dark_background"
        android:padding="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_back"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="Kritik Saran"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="120dp"
       android:background="@color/white"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:layout_marginTop="20dp"
           android:text="Silahkan berikan kritik dan saran untuk sistem kami\nTerima Kasih :)"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginHorizontal="20dp"
           android:fontFamily="sans-serif-light"
           android:hint="judul"
           android:paddingHorizontal="10dp"
           android:textSize="14sp"
           android:id="@+id/judul" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp"
           android:fontFamily="sans-serif-light"
           android:hint="Kritik atau saran"
           android:paddingHorizontal="10dp"
           android:singleLine="false"
           android:textSize="14sp"
           android:inputType="textMultiLine"
           android:lines="8"
           android:minLines="6"
           android:maxLines="10"
           android:gravity="top"
           android:id="@+id/pesan"
           />

       <Button
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_gravity="right"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:background="@drawable/btn_round_blue"
           android:text="submit"
           android:textColor="@color/white"
           android:id="@+id/submitKrisar"/>


   </LinearLayout>

</RelativeLayout>